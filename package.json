{
  "name": "safe-any",
  "version": "0.0.1",
  "description": "Safe interface to JSON and any objects written in TypeScript.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build-dist": "webpack --config webpack.config.js",
    "lint": "tslint --project .",
    "test": "npm run build && npm run build-dist && nyc mocha",
    "coverage": "nyc --reporter=text-lcov mocha | coveralls",
    "docs": "typedoc --out docs ./lib"
  },
  "keywords": [
    "json",
    "typescript",
    "any"
  ],
  "author": "Samuel Schepp",
  "license": "MIT",
  "devDependencies": {
    "@types/assert": "^1.4.2",
    "@types/mocha": "^5.2.7",
    "assert": "^2.0.0",
    "coveralls": "^3.0.5",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3",
    "typescript-declaration-webpack-plugin": "^0.1.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  }
}
